{
  "install": "npm install",
  "start": "node kuzu.js",
  "watch": {
    "ignore": [
      "\\.git",
      "node_modules/**/node_modules",
      "session/*",
      ".data/*"
    ],
    "install": {
      "include": [
        "^package\\.json$",
        "^package-lock\\.json$"
      ]
    },
    "restart": {
      "include": [
        "\\.js$",
        "\\.json"
      ]
    },
    "throttle": 3000
  }
}